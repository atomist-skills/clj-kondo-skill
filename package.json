{
  "name": "clj-kondo-skill",
  "version": "0.1.0",
  "author": "jim@atomist.com",
  "description": "A linter for Clojure code that sparks joy",
  "scripts": {
    "build:watch": "shadow-cljs watch dev",
    "build:release:watch": "shadow-cljs watch release",
    "build": "shadow-cljs release release",
    "clean": "rimraf .cpcache .shadow-cljs index.js*",
    "bundle": "bundle",
    "skill": "npm run bundle",
    "test": "shadow-cljs compile test",
    "atm:lint:prettier": "prettier --write"
  },
  "dependencies": {
    "@atomist/api-cljs": "^0.4.57"
  },
  "devDependencies": {
    "@atomist/skill-bundler": "^0.1.13",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shadow-cljs": "^2.8.69",
    "source-map-support": "0.5.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.@(graphql|json|markdown|yaml|yml|md)": "npm run atm:lint:prettier"
  }
}
